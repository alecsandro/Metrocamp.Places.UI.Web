<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/custom.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/simple-sidebar.css" rel="stylesheet">
    
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        <img src="~/Content/Images/logo.png" />
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index")">Pesquisar Lugares</a>
                </li>
                <li>
                    <a href="@Url.Action("Tempo")">Previsão do Tempo</a>
                </li>
                <li>
                    <a href="@Url.Action("Geo")">Geocoding API</a>
                </li>
                <li>
                    <a href="@Url.Action("Place")">Places API</a>
                </li>
                <li>
                    <a href="@Url.Action("HG")">HG Weather API</a>
                </li>                
                <li>
                    <a href="@Url.Action("Sobre")">Sobre</a>
                </li>
                <li>
                    &nbsp;
                </li>
                <li class="sidebar-powered">
                    <div><span class="small p-a-0">Powered by</span></div>
                    <img src="~/Content/Images/logo_google_hg.png" />
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->
        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a href="#menu-toggle" class="btn btn-sm btn-primary" id="menu-toggle"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
                        @RenderBody()                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Menu Toggle Script -->
    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $("#wrapper").toggleClass("toggled");
        });
    </script>
</body>
</html>
